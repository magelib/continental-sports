<?xml version="1.0"?>
    <page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
        <body>
        	<referenceContainer name="header.container">
        			<!-- Custom banner -->
             <container name="main-banner" htmlClass="main-banner" htmlTag="div">
                 <block class="Magento\Cms\Block\Block" name="main_banner">
                    <arguments>
                        <argument name="css_class" xsi:type="string">main_banner</argument>
                        <argument name="block_id" xsi:type="string">main_banner</argument>
                    </arguments>
                </block>
            </container>  
          </referenceContainer>
            <referenceContainer name="main">
	        		<block class="Continental\HomeFeatures\Block\Features" template="Continental_HomeFeatures::default/features.phtml"/>
            </referenceContainer>
        </body>
    </page>
