  if (clientErr) {
    // Handle error in client creation
    return;
  }

  hostedFields.create({
    client: clientInstance,
    styles: {
      'input': {
        'font-size': '14pt',
	'border': '1px solid #c2c2c2',
        'height': '25px'
      },
      'input.invalid': {
        'color': 'red'
      },
