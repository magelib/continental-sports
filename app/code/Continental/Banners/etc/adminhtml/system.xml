<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../Magento/Config/etc/system_file.xsd">
    <system>
        <tab id="Continental" translate="label" sortOrder="10">
            <label>Continental</label>
        </tab>

        <section id="Continental_Banners" translate="label" type="text" sortOrder="10" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Home</label>
            <tab>Continental</tab>
            <resource>Continental_Banners::Continental_Banners</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0"
                   showInStore="0">
                <label>Home Background</label>
                <field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable Editable Background</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        Comment for 'Enable Banners' setting.
                    </comment>
                </field>
                <field id="block_title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Title</label>
                </field>

                <field id="block_text" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <!--		<frontend_model>Continental\Banners\Block\Adminhtml\System\Config\Editor</frontend_model> -->
                    <label>Text</label>
                </field>

                <!--
                                <field id="background_image" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                                    <label>Background Image</label>
                                </field>
                -->

                <field id="block_href" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Link</label>
                </field>
                <!--           <field id="main_text_align" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                                   <label>Paragraph  Align</label>
                                   <source_model>Continental\Banners\Model\Source\Align</source_model>
                               </field>
               -->
                <field id="custom_file_upload" translate="label"
                       type="Magento\Config\Block\System\Config\Form\Field\File" sortOrder="60" showInDefault="1"
                       showInWebsite="1">
                    <label>Default Banner Image</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">banners</upload_dir>
                </field>

                <!-- testing -->
                <field id="test_row" translate="label" type="Magento\Config\Block\System\Config\Form\Field\File"
                       sortOrder="60" showInDefault="1" showInWebsite="1">
                    <label>Test Banner</label>
                    <frontend_model>Continental\Banners\Block\Adminhtml\System\Config\BannerImageField</frontend_model>
                    <backend_model>Continental\Banners\Model\System\Config\BannerImageField</backend_model>
                    <upload_dir config="system" scope_info="1">banners</upload_dir>
                </field>
            </group>
        </section>
    </system>
</config>
